{
  "name": "@grafe/grafe-core",
  "version": "1.0.1",
  "description": "This is the core module of grafe. With the help of the core, all routes are created according to the corresponding folder structure.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "mocha build/test/**/*.js",
    "test-w": "mocha build/test/**/*.js --watch --recursive",
    "build": "tsc",
    "build-w": "tsc --watch",
    "build-prod": "tsc --project tsconfig.prod.json",
    "coverage": "nyc npm run test",
    "coverage-check": "nyc check-coverage",
    "postinstall": "patch-package",
    "lint": "eslint . --ext .ts",
    "lint-fix": "eslint . --ext .ts --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/grafe-team/grafe-framework.git"
  },
  "keywords": [
    "grafe-core",
    "rest-server",
    "backend",
    "framework"
  ],
  "author": "Stefan Streimel, Marvin Koch",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/grafe-team/grafe-framework/issues"
  },
  "files": [
    "build/**/*",
    "README.md"
  ],
  "homepage": "https://grafe-framework.com/",
  "devDependencies": {
    "@types/chai": "^4.2.18",
    "@types/express": "^4.17.12",
    "@types/mocha": "^8.2.2",
    "@types/mock-require": "^2.0.0",
    "@types/node": "^15.0.2",
    "@types/rewire": "^2.5.28",
    "@types/sinon": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "chai": "^4.3.4",
    "eslint": "^7.27.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "mocha": "^8.4.0",
    "mock-require": "^3.0.3",
    "nyc": "^15.1.0",
    "patch-package": "^6.4.7",
    "prettier": "^2.3.0",
    "rewire": "^5.0.0",
    "sinon": "^10.0.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "express": "^4.17.1"
  }
}